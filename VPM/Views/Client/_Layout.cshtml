@{ var user = (VPM.Models.mClient)ViewBag.user;}
<!DOCTYPE html>
<html lang="en">

<head>

    <script src="~/assets/js/check_browser.js"></script>
    @*remove ie support*@
    <script>
        if (ie()) {
            window.location = "/Home/UpdateBrowser";
        }
        else {
            //console.log("ok");
        }
    </script>
    @*mega menu*@
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.title</title>
    @*jquery*@
    <script src="~/assets/js/jquery.min.js"></script>
    @*viewport*@
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />


    @*core css files*@
    @*sidebar_theme*@
    <link href="~/template_themes/sidebar_/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/template_themes/sidebar_/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/template_themes/sidebar_/css/simple-sidebar.css" rel="stylesheet" />
    <script src="~/template_themes/sidebar_/vendor/bootstrap/js/bootstrap.js"></script>





    <link href="~/account/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/account/assets/css/bspagination.min.css" rel="stylesheet" />
    <link href="~/assets/css/mystyle.css" rel="stylesheet" />

    @*jqui for auto complete*@
    <link href="~/assets/libs/jqui/jquery-ui.css" rel="stylesheet" />
    <script src="~/assets/libs/jqui/jquery-ui.js"></script>
    <script src="~/assets/libs/validate/jquery_validator/jquery.validate.js"></script>


    <link href="~/template_themes/sidebar_/css/imageHoverSmall.css" rel="stylesheet" />



</head>



<body>


    @if (ViewBag.msg != null && ViewBag.msg != "")
    {
        <script>
            $.alert({
                title: "Information",
                content: "@ViewBag.msg",
                type:"@ViewBag.type"
            })
        </script>

    }


    <div class="d-flex" id="wrapper">
        @* Sidebar *@
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                @user.name @user.surname
            </div>
            <div class="list-group list-group-flush">
                <a href="/Client/Dashboard" class="list-group-item list-group-item-action bg-light @(ViewBag.title=="Make Payment"?"_active":"")">Make Payment</a>
                <a href="/Client/PaymentHistory" class="list-group-item list-group-item-action bg-light @(ViewBag.title=="Payment History"?"_active":"")">Payment History</a>
                <a href="/Client/Account" class="list-group-item list-group-item-action bg-light @(ViewBag.title=="Account"?"_active":"")">My Account</a>
                <a href="/Client/Maintenance" class="list-group-item list-group-item-action bg-light @(ViewBag.title=="Maintenance"?"_active":"")">Maintenance</a>
            </div>
        </div>
        @* #sidebar-wrapper *@

        @* Page Content *@
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <img src="~/assets/img/h_menu.png" height="40" width="40" id="menu-toggle" />

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Menu
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                @* <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>*@
                                <a class="dropdown-item" href="/Account/Logout">Log out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            @*  End Navbar*@
            <div class="container-fluid" style="padding-top:15px!important;">
                @RenderBody()
            </div>
        </div>
    </div>




    @*chat support*@
    @if (user != null)
    {
        @Html.Raw(globals.chatSupportWithEmail.Replace("<!--replace_me_with_Email-->", user.email));
    }
    else
    {
        @Html.Raw(globals.chatSupport);
    }


    <script>
        window.onbeforeunload = function () {
            $.busyLoadFull("show");
        };
    </script>


    @* Menu Toggle Script *@
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>



</body>


</html>