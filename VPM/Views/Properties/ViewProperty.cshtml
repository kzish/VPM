@*modal add to wainting list*@

<!-- Modal -->
<div id="modalAddtoWaitingList" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h3>Join Waiting List</h3>
            </div>
            <div class="modal-body">

                <form id="fwl" method="post" action="/properties/JoinWaitingList" style="color:red;">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">Firstname <span style="color:red">*</span></label>
                                <input type="text" name="name" id="_name" class="form-control" required />
                                <input type="hidden" name="pid" id="_pid" class="form-control" value="@p._id" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">Surname <span style="color:red">*</span></label>
                                <input type="text" name="surname" id="_surname" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">Mobile <span style="color:red">*</span></label>
                                <input type="number" name="mobile" id="_mobile" class="form-control" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">Email <span style="color:red">*</span></label>
                                <input type="email" name="email" id="_email" class="form-control" required/>
                            </div>
                        </div>
                    </div>

                    @if (p.eligibilityFormLink != "" && p.eligibilityFormLink != null)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <a class="btn btn-primary btn-block btn-sm" href="@p.eligibilityFormLink" target="_blank">@p.eligibilityFormLink</a>
                                    <br />
                                    <small>Click on the above link and kindly take the time to fill in the form as it will assist your application</small>
                                </div>
                            </div>
                        </div>

                    }


                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="black">Address <span style="color:red"></span></label>
                                <textarea name="address" id="_address" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">From Date <span style="color:red"></span></label>
                                <input type="text" name="fromDate" id="_fromDate" class="form-control" style="width:100%!important;" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="black">To Date <span style="color:red"></span></label>
                                <input type="text" name="toDate" id="_toDate" class="form-control"  />
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-sm">Submit Application</button>
                    <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>

                </form>

            </div>

        </div>

    </div>
</div>


@*modal submit enquiry*@
<!-- Modal -->
<div id="modalenq" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Enquire about this property</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form class="form" id="fenquiry" style="color:red;" action="/Properties/makeEnquiry" method="post">
                            <div class="form-group">
                                <input type="hidden" name="property_id" id="property_id" value="@p._id" />
                                <label class="black">Name <span style="color:red;">*</span></label>
                                <input type="text" required class="form-control" placeholder="name" id="name" name="name" />
                                <br /><label class="black">Mobile <span style="color:red;">*</span></label>
                                <input type="number" required class="form-control" placeholder="mobile" id="mobile" name="mobile" />
                                <br /><label class="black">Email </label>
                                <input type="email" class="form-control" placeholder="email" id="email" name="email" />
                                <br /><label class="black">Enquiry <span style="color:red;">*</span></label>
                                <textarea placeholder="I would like to make an enquiry..." rows="5" required class="form-control" id="enquiry" name="enquiry"></textarea>
                                <br />
                                <input id="btnsubmit" type="submit" value="Submit Enquiry" class="btn btn-success btn-sm" />
                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>


                            </div>
                        </form> @*contact form*@
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    (function ($) {
