        });

        $('#water').barrating({
            theme: 'fontawesome-stars'
        });

    })(jQuery);


    var map, marker;
    tomtom.setProductInfo('VPM', '4.44.7');
    tomtom.key('kDBGrc2tROkfTL2jlCBl26GLscDVhEZL');
    tomtom.searchKey('kDBGrc2tROkfTL2jlCBl26GLscDVhEZL');

    map = tomtom.map('map', {
